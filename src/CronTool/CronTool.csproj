    <Version>1.0.2</Version>
    <PackageTags>cron</PackageTags>
  </PropertyGroup>

  <!--<ItemGroup>
    <Content Include="..\.sonarlint\cron-tool\CSharp\SonarLint.xml" Link="SonarLint.xml" />
  </ItemGroup>-->

